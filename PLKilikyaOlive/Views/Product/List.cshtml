@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "List";
}

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var product in Model.ToList())
        {
            <div class="col-lg-3">
                <div class="product">
                    <div class="product-image" style="height:250px;">
                        <a href="#">
                            <img alt="Shop product image!" src="images/greenOlive.jpg">
                        </a>
                        <div class="product-overlay">
                            <a href="shop-product-ajax-page.html" data-lightbox="ajax">İncele</a>
                        </div>
                    </div>

                    <div class="product-description">
                        <div class="product-title">
                            <h3><a href="#">@product.Name</a></h3>
                        </div>
                        <div class="product-price">
                            <ins>@product.Price</ins>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div>
        Ürün Bulunamadı!!
    </div>
}


